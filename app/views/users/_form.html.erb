<%= simple_form_for user do |f| %>
  <%# <%= f.input :name,  required: false, placeholder: '山田 太郎' %1><br /> %>
  <%= f.input :name,  placeholder: '山田 太郎' %><br />
  <%= f.input :email, placeholder: 'example@example.com' %><br />
