class TimeTablesController < ApplicationController
  # GET /time_tables/new Prefix => new_time_tables
  def new
    @time_table = TimeTable.new
    @artist = Artist.new
  end

  # POST /time_tables Prefix => time_tables
  def create
    @time_table = TimeTable.new(time_table_params)
    @artist = Artist.new(time_table_params
    if @time_table.save && @artist.save
      flash[:success] = '成功'
      redirect_to root_path
    end
  end

  private

  # String Parameters
  def time_table_params
    params.require(:time_table).permit(:name, :stage)
  end

  # def artist_params
  #   params.require(:artist).permit(:name)
  # end
end
